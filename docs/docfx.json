{
  "metadata": [
    {
      "src": [
        {
          "files": [
            "DNTPersianUtils.Core/DNTPersianUtils.Core.csproj"
          ],
       "exclude": [
          "**/obj/**",
          "**/bin/**",
          "_site/**"
        ],
          "src": "../src"
        }
      ],
      "dest": "api",
      "includePrivateMembers": false,
      "disableGitFeatures": false,
      "disableDefaultFilter": false,
      "noRestore": false,
      "namespaceLayout": "flattened",
      "memberLayout": "samePage",
      "allowCompilationErrors": false,
     "properties": {
         "TargetFramework": "net9.0"
     }
    }
  ],
  "build": {
    "content": [
      {
        "files": [
          "api/**.yml",
          "api/index.md"
        ]
      },
      {
        "files": [
          "articles/**.md",
          "articles/**/toc.yml",
          "toc.yml",
          "*.md"
        ]
      }
    ],
    "resource": [
      {
        "files": [
          "images/**"
        ]
      }
    ],
    "dest": "_site",
    "globalMetadataFiles": [],
    "fileMetadataFiles": [],
    "template": [
      "default",
      "modern"
    ],
    "postProcessors": [],
    "keepFileLink": false,
    "disableGitFeatures": false,
    "globalMetadata": {
      "_enableSearch": true,
	  "_appFooter": "Â© <a href='https://www.dntips.ir/'>dntips.ir</a>",
	  "_copyrightFooter": " "
    }	
  }
}